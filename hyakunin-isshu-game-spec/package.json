{
    "name": "hyakunin-isshu-game",
    "version": "1.0.0",
    "description": "百人一首（ひゃくにんいっしゅ）- ブラウザベースの百人一首かるたゲーム",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "test": "jest --verbose",
        "test:unit": "jest tests/unit --verbose",
        "test:property": "jest tests/property --verbose"
    },
    "keywords": [
        "hyakunin-isshu",
        "百人一首",
        "karuta",
        "かるた",
        "japanese-poetry"
    ],
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "fast-check": "^3.15.0"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/tests/unit/**/*.test.js",
            "**/tests/property/**/*.prop.js"
        ],
        "verbose": true
    }
}